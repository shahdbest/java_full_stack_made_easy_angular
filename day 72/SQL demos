select * from students

select course , count(marks) as "total studs"
from students
group by course;

select name,course , count(*) as "total studs"
from students
group by course;
-- error always remember any coulmn includen in select must be included in group by or an aggregate function should be used 


select course , avg(marks) as "total studs"
from students
group by course;


select course , avg(marks) as "avg_marks"
from students
group by course
having avg_marks > 80 




