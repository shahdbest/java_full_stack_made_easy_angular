--------------address.ts

  import { Component, Input } from '@angular/core';

@Component({
  selector: 'app-address',
  standalone: false,
  templateUrl: './address.html',
  styleUrl: './address.css'
})
export class Address {

  @Input('city')
  city="pune";
    @Input('state')
  state="maharastra"


}


  

  
